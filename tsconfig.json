{
    "compilerOptions": {
        "alwaysStrict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "dom"
        ],
        "removeComments": false,
        "declaration": true,
        "sourceMap": false,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "./src/**/*",
        "./index.ts"
    ]
}